/* pages/learning/learning.wxss */
.learn-content {
  display: flex;
  margin: 40rpx 0;
}

.learn-l .img {
  margin: 0;
  width: 220rpx;
  height: 280rpx; 
}

.learn-r {
  width: 440rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column; 
  justify-content: space-between;
}

.learn-r .learn-title{
  font-size: 14px;
  color: #000;
}

.learn-r .learn-chapter{
  font-size: 12px;
  color: #888;
}

.learn-schedule,.learn-seen-time,.btn-tow {
  display: flex;
  justify-content: space-between;
}


.learn-r .learn-seen,.seen-title,.seen-time{
  font-size: 10px;
  color: #888
}

.btn-tow {
  display: flex;
  justify-content: space-between;
}

.btn-tow .btn {
  color: #333;
  margin: 0;
  width: 160rpx;
  font-size: 12px;
  background: #e9e9e9;
  border: 1px solid #e9e9e9;
}

.learn-load{
  font-size: 14px;
  color: #888;
  text-align: center;
  margin: 60rpx auto;
}